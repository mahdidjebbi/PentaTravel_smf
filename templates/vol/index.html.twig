{% extends 'base.html.twig' %}

{% block title %}Hello VolController!{% endblock %}

{% block body %}
<section id="main-content">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-title">
						<h4>Agence Data Table
						</h4>

					</div>

					{# <a href="{{ path('volAdd') }}">Add</a> #}
					<div class="bootstrap-data-table-panel">
						<div class="table-responsive">
							<table id="row-select" class="display table table-borderd table-hover">
								<thead>
									<tr>
										<th>capacity</th>
										<th>prix</th>
										<th>company</th>
										<th>depart</th>
										<th>destination</th>
										<th>date</th>
										<th>agence</th>
										<th></th>
									</tr>
								</thead>

								<tbody>

									{% for u in tab %}

										<tr>
											<td>{{u.capacity}}</td>
											<td>{{u.prix}}</td>
											<td>{{u.company}}</td>
											<td>{{u.depart}}</td>
											<td>{{u.destination}}</td>
											<td>{{u.date|date}}</td>
											<td>{{u.getAgence().getNom()}}</td>

											<td>
												<a href="{{ path('volUpdate',{'id':u.id}) }}">Update</a>
												<a href="{{ path('volDelete',{'id':u.id}) }}">Delete</a>
											</td>
										</tr>
										<tr></tr>
									{% endfor %}

								</tbody>
								{# <tfoot>
									<tr>
										<th>idProp</th>
										<th>nom</th>
										<th>numero</th>
										<th>Address</th>
										<th>nbEtoile</th>
										<th></th>
									</tr>
								</tfoot> #}
							</table>
						</div>
					</div>
				</div>
				<!-- /# card -->
			</div>
			<!-- /# column -->
		</div>
		<!-- /# row -->


	</section>
{% endblock %}
