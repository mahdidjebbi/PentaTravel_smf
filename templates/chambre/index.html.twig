{% extends 'base.html.twig' %}

{% block title %}Hello ChambreController!{% endblock %}

{% block body %}
<section id="main-content">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-title">
						<h4>Hotel Data Table
						</h4>

					</div>

					{# <a href="{{ path('agenceAdd') }}">Add</a> #}
					<div class="bootstrap-data-table-panel">
						<div class="table-responsive">
							<table id="row-select" class="display table table-borderd table-hover">
								<thead>
									<tr>
										<th>number</th>
										<th>prix</th>
										<th>image</th>
										<th>description</th>
										<th>disp</th>
										<th>hotel</th>
										<th></th>
									</tr>
								</thead>

								<tbody>

									{% for u in tab %}

										<tr>
											<td>{{u.number}}</td>
											<td>{{u.prix}}</td>
											<td>{{u.image}}</td>
											<td>{{u.description}}</td>
											<td>{{u.disp}}</td>
											<td>{{u.getHotel().getNom()}}</td>

											<td>
												<a href="{{ path('reservationAdd',{'id':u.id}) }}">Reservation</a>
												<a href="{{ path('ChambreUpdate',{'id':u.id}) }}"> Update</a>
												{# <a href="{{ path('agenceDelete',{'id':u.id}) }}">Delete</a> #}
											</td>
										</tr>
										<tr></tr>
									{% endfor %}

								</tbody>
								<tfoot>
									<tr>
										<th>number</th>
										<th>prix</th>
										<th>image</th>
										<th>description</th>
										<th>disp</th>
										<th>hotel</th>
										<th></th>
									</tr>
								</tfoot>
							</table>
						</div>
					</div>
				</div>
				<!-- /# card -->
			</div>
			<!-- /# column -->
		</div>
		<!-- /# row -->


	</section>
{% endblock %}
